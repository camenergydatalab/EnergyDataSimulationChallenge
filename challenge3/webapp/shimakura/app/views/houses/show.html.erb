<div class="container-fluid">
  <%= link_to '家庭一覧に戻る', houses_path %>
  <div class="row">
    <div class="col-md-12 text-center">
      Firstname:<%= @house.firstname %>&emsp; 
      Lastname:<%= @house.lastname %>&emsp; 
      City:<%= @house.city %>&emsp; 
      Num of people:<%= @house.num_of_people %>&emsp; 
      Has child:<%= @house.has_child %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4">
      <table class="table table-striped table-bordered table-sm">
        <thead>
          <tr>
            <th>Date</th>
            <th>Temperature</th>
            <th>Daylight</th>
            <th>Energy<br>Production</th>
          </tr>
        </thead>
        <tbody>
          <% @energy_list.each do |energy| %>
            <tr>
              <td><%= energy["date"] %></td>
              <td><%= energy["temperature"] %></td>
              <td><%= energy["daylight"] %></td>
              <td><%= energy["energy_production"] %></td>
            </tr>  
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-8">
      <%= 
        line_chart [
          { name: "energy_production", data: @energy_production_list },
          { name: "daylight", data: @daylight_list },
        ], height: "450px", max: 1200, colors: ["red", "blue"]
      %>
      <%= 
        line_chart [
          { name: "temperature", data: @temperature_list },
        ], height: "200px", max: 40, colors: ["black"]
      %>
    </div>
  </div>
</div>